FROM mcr.microsoft.com/playwright:v1.52.0-jammy

WORKDIR /app

# Install Node.js dependencies
COPY package.json ./
RUN npm install
RUN npm install -g http-server

# Install Python and pip
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    && ln -sf /usr/bin/python3 /usr/bin/python \
    && ln -sf /usr/bin/pip3 /usr/bin/pip

# Install Python dependencies
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Copy test scripts and utilities
COPY run-tests.sh ./
RUN chmod +x run-tests.sh

# Copy Playwright configuration
COPY playwright.config.ts ./

# Copy setup scripts
COPY setup/wait-for-services.sh ./setup/
RUN chmod +x ./setup/wait-for-services.sh

# Set up directories for test results
RUN mkdir -p results/e2e results/api test-results

CMD ["./run-tests.sh"]
